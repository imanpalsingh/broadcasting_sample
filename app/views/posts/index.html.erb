<% if current_user.group %>

  <%= turbo_stream_from("groups/#{current_user.group.id}") %>
<% else %>
  <%= turbo_stream_from(:notifications) %>
<% end %>

<nav class="navbar" role="navigation" aria-label="main navigation">
  <div class="navbar-brand">
    <a role="button" class="navbar-burger" aria-label="menu" aria-expanded="false" data-target="navbarBasicExample">
      <span aria-hidden="true"></span>
      <span aria-hidden="true"></span>
      <span aria-hidden="true"></span>
    </a>
  </div>

  <div id="navbarBasicExample" class="navbar-menu">
    <div class="navbar-start">
      <a class="navbar-item blue">
        <%= current_user.email %>
      </a>
      <span id="notification-icon" class="material-icons navbar-item">
        email
      </span>
    </div>

    <div class="navbar-end">
      <% if current_user.group_id %>
        <span class="navbar-item">
          Group: <%= current_user.group.name %>
        </span>
      <% end %>
      <div class="navbar-item">
        <div class="buttons">
          <%= button_to "Log out", destroy_user_session_path, method: :delete, class: "button is-light" %>
        </div>
      </div>
    </div>
  </div>
</nav>